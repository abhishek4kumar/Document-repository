# Confluence API Configuration
# Copy this file to .env and fill in your values

# Your Confluence Base URL (e.g., https://your-domain.atlassian.net/wiki)
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net/wiki

# Your Email Address used for Confluence
CONFLUENCE_USER_EMAIL=your-email@example.com

# Your Personal Access Token (PAT)
# Generate one in Confluence Settings -> Personal Access Tokens
CONFLUENCE_PAT=your_api_token_here

# The Space Key where the page will be created
# (Keep it short, e.g. "DS" or "ENG")
CONFLUENCE_SPACE_KEY=DS

# The Title of the Parent Page under which the new page will be created
CONFLUENCE_PARENT_TITLE=Home

# Optional: Certification Path (Leave empty if not using custom certs)
CONFLUENCE_CERT_PATH=
